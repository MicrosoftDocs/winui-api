<UserControl x:Class="ToolTipServiceSnippet.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">

    <!--<snippet1>-->
    <StackPanel x:Name="LayoutRoot" >
        <TextBlock Margin="20,20,0,0" 
            Text="ToolTipService Class Demonstration" 
            Width="270" FontWeight="bold" />
        <Button Content="Hover over me" Margin="20,20,0,0" 
            Width="100"  ToolTipService.ToolTip="This is a tooltip" />
        <Button x:Name="Button" Content="Hover over me" 
            Margin="20,20,0,0" Width="100" Loaded="Button_Loaded"/>
    </StackPanel>
    <!--</snippet1>-->
</UserControl>
